<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.joekelly.mapsandlocation.StatsActivity"
    tools:showIn="@layout/activity_stats">

    <TextView
        android:id="@+id/tvTodaySteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        android:text="Todays Steps: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.429"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWeeklySteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Steps: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTodaySteps"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/tvOverallSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall Steps: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWeeklySteps"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvCurrentSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Session Steps: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="157dp"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTodaySteps" />

    <com.jjoe64.graphview.helper.GraphViewXML
        android:id="@+id/gGraph"
        android:layout_width="309dp"
        android:layout_height="81dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:seriesColor="#ffffff"
        app:seriesData="0=0;2=0;4=0;"
        app:seriesType="bar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvCurrentSession"
        app:layout_constraintVertical_bias="0.602"
        app:layout_constraintHorizontal_bias="0.508" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="73dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:ems="6"
        android:hint="Weight(Kg)"
        android:inputType="number|numberDecimal"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/tgsex"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/height"
        android:layout_width="74dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:ems="6"
        android:hint="Height(cm)"
        android:inputType="number|numberDecimal"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/weight"
        android:layout_marginRight="0dp" />
    <EditText
        android:id="@+id/age"
        android:layout_width="77dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:ems="6"
        android:hint="Age"
        android:inputType="number|numberDecimal"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/height"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.888" />


    <Button
        android:id="@+id/calc"
        android:layout_width="58dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="321dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ToggleButton
        android:id="@+id/tgsex"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="ToggleButton"
        android:textOff="Male"
        android:textOn="Female"
        android:textSize="8sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/calc"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>
