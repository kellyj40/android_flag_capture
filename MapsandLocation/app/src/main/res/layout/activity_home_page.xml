<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joekelly.mapsandlocation.HomePage">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/publicGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_public_black_24dp"
            android:onClick="publicGameLauncher"
            android:text="Public Game" />

        <Button
            android:id="@+id/privateGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Private Game"
            android:onClick="privateGameLauncher"
            android:drawableRight="@drawable/ic_person_outline_black_24dp"
            />

        <Button
            android:id="@+id/stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stats"
            android:onClick="statsLauncher"
            android:drawableRight="@drawable/ic_fitness_center_black_24dp"
            />

        <Button
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score"
            android:onClick="scoreLauncher"
            android:drawableRight="@drawable/ic_whatshot_black_24dp"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
