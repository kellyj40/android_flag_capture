<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:weightSum="6.4"
    android:orientation="vertical"
    android:background="@color/teal_tint"
    tools:context="com.joekelly.mapsandlocation.HomePage">

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2">

        <include layout="@layout/scroll"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
    </LinearLayout>

        <!--<Space-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1.6"/>-->

        <Button
            android:id="@+id/publicGame"
            android:layout_weight=".9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableLeft="@drawable/ic_public_black_24dp"
            android:onClick="publicGameLauncher"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:textColor="@color/gray"
            android:shadowDx="1.5"
            android:shadowDy="1.7"
            android:shadowRadius="1.6"
            android:text="Public Game" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".2"/>

        <Button
            android:id="@+id/privateGame"
            android:layout_weight=".9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Private Game"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="privateGameLauncher"
            android:background="@color/white"
            android:textColor="@color/gray"
            android:shadowDx="1.5"
            android:shadowDy="1.7"
            android:shadowRadius="1.6"
            android:drawableLeft="@drawable/person"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".2"/>

        <Button
            android:id="@+id/stats"
            android:layout_weight=".9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Stats"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:onClick="statsLauncher"
            android:background="@color/white"
            android:textColor="@color/gray"
            android:shadowDx="1.5"
            android:shadowDy="1.7"
            android:shadowRadius="1.6"
            android:drawableLeft="@drawable/weights"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".2"/>

        <Button
            android:id="@+id/score"
            android:layout_weight=".9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Score"
            android:onClick="scoreLauncher"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:textColor="@color/gray"
            android:shadowDx="1.5"
            android:shadowDy="1.7"
            android:shadowRadius="1.6"
            android:drawableLeft="@drawable/flame"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".2"/>

</LinearLayout>
